@model IEnumerable<BootCamp.Models.Employee>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Employee";
    int counter = 1;
    int counter1 = 1;
    int counter2 = 1;
    var filteredProducts = ViewBag.FilteredProducts as List<BootCamp.Models.Product>;
    var itEmployees = Model.Where(e => e.Department != null && e.Department.Equals("IT", StringComparison.OrdinalIgnoreCase)).ToList();
}

<div class="main-content">
    <div class="first-row">
        <div class="card1">
            <div class="header">
                <div class="card-header1">Employees  @ViewBag.productcount</div>
                <div class="header-right">
                    <div class="search-box">
                        <i class="fas fa-search" style="color:#3c3"></i>
                        <input type="text" id="searchInput" placeholder="Search..." style="color:blue">
                    </div>
                </div>
            </div>
            <div class="card-bodytable">
                <div class="table-container">
                    <table class="table table-hover" id="searchableTable">
                        <thead class="table-header-fixed">
                            <tr>
                                <th>#</th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Position)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Salary)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.HireDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Department)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>                                
                                <th>
                                    @Html.DisplayNameFor(model => model.username)
                                </th> 
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(counter++)</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Position)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Salary)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HireDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Department)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.username)
                                    </td>                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="card">
                <div class="card-header">Employee Contact</div>
                <div class="card-bodytable2" style="height: 450px;">
                    <div class="table-container2" style="height: 440px;">
                        <table class="table table-hover">
                            <thead class="table-header-fixed">
                                <tr>
                                    <th>#</th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>                                    
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PhoneNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Address)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@(counter1++)</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>IT Employees @ViewBag.filterproduct</span>
                </div>
                <div class="card-bodytable2" style="height: 250px;">
                    <div class="table-container2" style="height: 240px;">
                         <table class="table table-hover">
                        <thead class="table-header-fixed">
                            <tr>
                                <th>#</th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Position)
                                </th>                               
                                <th>
                                    @Html.DisplayNameFor(model => model.Department)
                                </th>                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in itEmployees)
                            {
                                <tr>
                                    <td>@(counter2++)</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Position)
                                    </td>                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Department)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
