@{
    ViewData["Title"] = "Home Page";
}

<h3 class="mb-4">Dashboard Overview</h3>
<!-- Dashboard Cards -->
<div class="dashboard-cards">
    <div class="card">
        <div class="card-body position-relative">
            <h5 class="card-title">Employees</h5>
            <p class="card-value">@ViewBag.EmployeeCount</p>
            <i class="fas fa-users card-icon"></i>
            <p class="card-text"><small class="text-color">+5 from last month</small></p>
        </div>
    </div>

    <div class="card">
        <div class="card-body position-relative">
            <h5 class="card-title">Products</h5>
            <p class="card-value">@ViewBag.ProductCount</p>
            <i class="fas fa-box card-icon"></i>
            <p class="card-text"><small class="text-color">+12 from last month</small></p>
        </div>
    </div>

    <div class="card">
        <div class="card-body position-relative">
            <h5 class="card-title">Categories</h5>
            <p class="card-value">@ViewBag.CategorieCount</p>
            <i class="fas fa-tags card-icon"></i>
            <p class="card-text"><small class="text-color">+2 from last month</small></p>
        </div>
    </div>
</div>