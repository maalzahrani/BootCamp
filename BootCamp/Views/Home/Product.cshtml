@model IEnumerable<BootCamp.Models.Product> 
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Product";
    int counter = 1;
    int counter1 = 1;
    var filteredProducts = ViewBag.FilteredProducts as List<BootCamp.Models.Product>;
}
<div class="main-content">
    <div class="first-row">
        <div class="card1">
            <div class="card-header1">Products Overview  @ViewBag.productcount</div>
            <div class="card-bodytable">
                <div class="table-container">
                    <table class="table table-hover">
                        <thead class="table-header-fixed">
                            <tr>                            
                                <th>#</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Stock</th>
                                <th>Employee</th>
                                <th>Category</th>                            
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(counter++)</td>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>@item.Price</td>
                                    <td>@item.Stock</td>
                                    <td>@item.Employee?.Name</td>
                                    <td>@item.Category?.Name</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="card">
                <div class="card-header">Featured Products</div>
                <div class="card-body" style="height: 250px;">
                    <div class="carousel">
                        <div class="carousel-container" id="carousel">
                            <div class="carousel-item">
                                <img src="~/img/laptop.png" alt="Product 1">
                                <h4>Laptop Pro</h4>
                                <p>$1,299</p>
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/headphone.png" alt="Product 2">
                                <h4>Wireless Headphones</h4>
                                <p>$199</p>
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/smartwatch.png" alt="Product 3">
                                <h4>Smart Watch</h4>
                                <p>$249</p>
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/speaker.png" alt="Product 4">
                                <h4>Bluetooth Speaker</h4>
                                <p>$89</p>
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/S23.png" alt="Product 5">
                                <h4>Samsung Galaxy S23</h4>
                                <p>$899</p>
                            </div>
                        </div>
                        <button class="carousel-btn prev" onclick="moveCarousel(-1)">
                            <i class="fas fa-chevron-left"></i>
                        </button>
                        <button class="carousel-btn next" onclick="moveCarousel(1)">
                            <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>Offers Products @ViewBag.filterproduct</span>
                </div>
                <div class="card-bodytable2" style="height: 450px;">
                    <div class="table-container2">
                        <table class="table table-hover" style="height: 430px;">
                            <thead class="table-header-fixed">
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th style="color:#3c3">Price</th>
                                    <th>Stock</th>
                                    <th>Category</th>
                                </tr>
                            </thead>
                            <tbody>                                
                                @if (filteredProducts != null && filteredProducts.Any())
                                {
                                    counter1 = 1;
                                    foreach (var item in filteredProducts)
                                    {
                                        <tr>
                                            <td>@(counter1++)</td>
                                            <td>@item.Name</td>
                                            <td>@item.Price</td>
                                            <td>@item.Stock</td>
                                            <td>@item.Category?.Name</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">No products with price less than 100</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
