@model DashboardViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Privacy Policy";   
}

<!-- Main Content -->
<div class="main-content">
    <!-- First Row -->
    <div class="first-row">
        <div class="card1">
            <div class="card-header1"><span style="color:#00004E">B</span>ootCamp Overview</div>
            <div class="card-body">
                <div class="stats-cards">
                    <div class="stat-card1">
                        <i class="fas fa-users"></i>
                        <h3>@ViewBag.EmployeeCount</h3>
                        <p>Employees</p>
                    </div>
                    <div class="stat-card1">
                        <i class="fas fa-box"></i>
                        <h3>@ViewBag.ProductCount</h3>
                        <p>Products</p>
                    </div>
                    <div class="stat-card1">
                        <i class="fas fa-list"></i>
                        <h3>@ViewBag.CategorieCount</h3>
                        <p>Categories</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header">Featured Products</div>
            <div class="card-body" style="height: 250px;">
                <div class="carousel">
                    <div class="carousel-container" id="carousel">
                        <div class="carousel-item">
                             <img src="~/img/laptop.png"   alt="Product 1">
                            <h4>Laptop Pro</h4>
                            <p>$1,299</p>
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/headphone.png"  alt="Product 2">
                            <h4>Wireless Headphones</h4>
                            <p>$199</p>
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/smartwatch.png" alt="Product 3">
                            <h4>Smart Watch</h4>
                            <p>$249</p>
                        </div>
                        <div class="carousel-item">
                           <img src="~/img/speaker.png" alt="Product 4">
                            <h4>Bluetooth Speaker</h4>
                            <p>$89</p>
                        </div>
                    </div>
                    <button class="carousel-btn prev" onclick="moveCarousel(-1)">
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <button class="carousel-btn next" onclick="moveCarousel(1)">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Second Row -->
    <div class="second-row">
        <div class="card">
            <div class="card-header">Employees Summary</div>
            <div class="card-body">
                <p>Our company employs @ViewBag.EmployeeCount professionals across various departments. The team includes developers, designers, marketers, and support staff who work together to deliver exceptional products and services to our clients.</p>
            </div>
        </div>
        <div class="card">
            <div class="card-header">Products Summary</div>
            <div class="card-body">
                <p>We offer @ViewBag.ProductCount high-quality products in our catalog, ranging from electronics to software solutions. Our products are known for their reliability, innovation, and competitive pricing in the market.</p>
            </div>
        </div>
        <div class="card">
            <div class="card-header">Categories Summary</div>
            <div class="card-body">
                <p>Our products are organized into @ViewBag.CategorieCount categories to help customers easily find what they need. These categories include Electronics, Software, Accessories, Home & Office, and more specialized groupings.</p>
            </div>
        </div>
    </div>

    <!-- Third Row -->
    <div class="third-row">
        <div class="card">
            <div class="card-header">Top Employees Information</div>
            <div class="card-body" >
                <table style="height: 200px;">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Position</th>
                            <th>Salary</th>
                            <th>Department</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int prodCounter = 1;
                        }
                        @foreach (var item in Model.TopEmployees)
                        {
                            <tr>
                                <td>@(prodCounter++)</td>
                                <td>@item.Name</td>
                                <td>@item.Position</td>
                                <td>@item.Salary.ToString("C")</td>
                                <td>@item.Department</td>
                            </tr>
                        }                                            
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card">
            <div class="card-header">Top Products Information</div>
            <div class="card-body">
                <table>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th style="color:#3c3">Price</th>
                            <th>Stock</th>
                            <th>Description</th>
                        </tr>                       
                    </thead>
                    <tbody>
                        @{
                            int prodCounter1 = 1;
                        }
                        @foreach (var item in Model.TopProducts)
                        {
                            <tr>
                                <td>@(prodCounter1++)</td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Stock</td>
                                <td>@item.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>