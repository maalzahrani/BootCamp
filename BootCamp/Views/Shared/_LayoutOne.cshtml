<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="~/css/stylesheet.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-logo">
                    <i class="fas fa-user"></i>
                </div>
                <span class="sidebar-title">Dashboard</span>
            </div>

            <nav class="sidebar-nav">
                <button class="nav-item active">
                    <i class="fas fa-chart-bar"></i>
                    <span>Overview</span>
                </button>
                <button class="nav-item">
                    <i class="fas fa-comments"></i>
                    <span>Messages</span>
                </button>
                <button class="nav-item">
                    <i class="fas fa-calendar"></i>
                    <span>Calendar</span>
                </button>
                <button class="nav-item">
                    <i class="fas fa-cog"></i>
                    <span>Settings</span>
                </button>
                <button class="nav-item">
                    <i class="fas fa-user"></i>
                    <span>Profile</span>
                </button>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="content-container">
                <!-- Header -->
                <div class="header">
                    <div class="header-content">
                        <div class="header-text">
                            <h1 class="greeting">Good Afternoon MOHAMMED ABDULKAREEM M ALZAHRANI</h1>
                            <p class="subtext">How can we help you today ?</p>
                        </div>

                        <div class="header-actions">
                            <div class="search-container">
                                <i class="fas fa-search search-icon"></i>
                                <input type="text" placeholder="Search Here" class="search-input">
                            </div>
                            <button class="chat-button">
                                <i class="fas fa-comments"></i>
                                Chat
                            </button>
                            <div class="profile-section">
                                <div class="avatar">MA</div>
                                <div class="status-indicator">
                                    <i class="fas fa-user"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Main Grid -->
                <div class="main-grid">
                    
                    <!-- Left Column - Mobile Interface -->
                    <div class="left-column">
                        <div class="card mobile-interface-card">
                            <div class="card-header blue-header">
                                <h3>Mobile App Interface</h3>
                                <span class="status-badge">Active</span>
                            </div>
                            <div class="card-content mobile-showcase">
                                <div class="phones-container">
                                    <!-- Phone 1 -->
                                    <div class="phone phone-1">
                                        <div class="phone-notch"></div>
                                        <div class="phone-content">
                                            <div class="phone-bar"></div>
                                            <div class="phone-blue-bar"></div>
                                            <div class="phone-green-section"></div>
                                            <div class="phone-lines">
                                                <div class="phone-line"></div>
                                                <div class="phone-line short"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Phone 2 -->
                                    <div class="phone phone-2">
                                        <div class="phone-notch"></div>
                                        <div class="phone-content">
                                            <div class="phone-blue-header"></div>
                                            <div class="phone-lines">
                                                <div class="phone-line"></div>
                                                <div class="phone-line medium"></div>
                                                <div class="phone-line short"></div>
                                            </div>
                                            <div class="phone-green-button"></div>
                                        </div>
                                    </div>
                                </div>
                                @RenderBody()
                                <!-- Decorative elements -->
                                <div class="decoration-circle large"></div>
                                <div class="decoration-circle small"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="right-column">
                        <!-- Status Card -->
                        <div class="card status-card">
                            <div class="card-content">
                                <div class="status-header">
                                    <button class="action-button">Active</button>
                                    <div class="status-dots">
                                        <div class="dot"></div>
                                        <div class="dot"></div>
                                    </div>
                                </div>
                                <div class="status-content">
                                    <div class="status-item">
                                        <i class="fas fa-check-circle"></i>
                                        <div class="status-line"></div>
                                    </div>
                                    <div class="status-line medium"></div>
                                    <div class="status-line short"></div>
                                </div>
                            </div>
                        </div>

                        <!-- Activity Card -->
                        <div class="card activity-card">
                            <div class="card-content">
                                <div class="activity-header">
                                    <button class="action-button">Status</button>
                                    <div class="activity-dot"></div>
                                </div>
                                <div class="activity-content">
                                    <div class="activity-blue-section"></div>
                                    <div class="activity-lines">
                                        <div class="activity-line"></div>
                                        <div class="activity-line medium"></div>
                                        <div class="activity-line short"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bottom Section -->
                <div class="bottom-grid">
                    <!-- Chat Section */
                    <div class="bottom-left">
                        <div class="card chat-card">
                            <div class="card-header blue-header">
                                <h3>Support Chat</h3>
                            </div>
                            <div class="card-content chat-content">
                                <div class="chat-messages">
                                    <div class="message received">
                                        <div class="message-bubble">
                                            <p>Hello, how can I help you today?</p>
                                            <span class="message-time">10:30 AM</span>
                                        </div>
                                    </div>
                                    <div class="message sent">
                                        <div class="message-bubble">
                                            <p>I need help with my account</p>
                                            <span class="message-time">10:32 AM</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="chat-input-area">
                                    <input type="text" placeholder="Type your message..." class="chat-input">
                                    <button class="send-button">
                                        <i class="fas fa-arrow-right"></i>
                                    </button>
                                </div>

                                <!-- Decorative elements -->
                    <div class="chat-decoration green"></div>
                    <div class="chat-decoration blue"></div>
                </div>
            </div>
        </div>

        <!-- Bottom Right */
                    <div class="bottom-right">
                        <div class="card settings-card">
                            <div class="card-content">
                                <button class="action-button">Settings</button>
                                <div class="settings-lines">
                                    <div class="settings-line"></div>
                                    <div class="settings-line medium"></div>
                                    <div class="settings-line short"></div>
                                </div>
                                <div class="settings-blue-section"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Floating Action Button -->
        <div class="floating-button">
            <i class="fas fa-comments"></i>
        </div>
    </div>
    <script src="~/js/script.js"></script>
</body>
</html>